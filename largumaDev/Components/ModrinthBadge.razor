@inject NavigationManager Navigation

<a href="https://modrinth.com/mod/@slug" target="_blank" rel="noopener noreferrer" class="modrinth-badge-link @(isActive ? "active" : "")">
  <img src="@badgeUrl" alt="@slug on Modrinth" loading="lazy" />
</a>

@code {
  [Parameter]
  public required string slug { get; set; }

  [Parameter]
  public bool isActive { get; set; } = true;

  private string badgeUrl => $"{Navigation.BaseUri}modrinth/badge/{slug}";
}

<style>
  .modrinth-badge-link {
    grid-area: stack;
    line-height: 0;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    z-index: 0;
  }

  .modrinth-badge-link.active {
    opacity: 1;
    z-index: 1;
  }

  .modrinth-badge-link:hover {
    transform: translateY(-2px);
    border-radius: 10px;
    border: 2px solid #cba6f7;
    box-shadow: 0 4px 12px rgba(203, 166, 247, 0.2);
    text-decoration: none;
  }

  .modrinth-badge-link img {
    display: block;
    border-radius: 10px;
    max-width: 100%;
    height: auto;
  }

  @@media (max-width: 768px) {
    .modrinth-badge-link img {
      width: 100%;
    }
  }

  @@media (max-width: 480px) {
    .modrinth-badge-link img {
      width: 100%;
    }
  }
</style>